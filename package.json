{
  "name": "democracy-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "build:pages": "next build",
    "deploy:pages": "rm -rf docs && mkdir -p docs && cp -r out/* docs/ && touch docs/.nojekyll",
    "ingest": "rm -rf .ingest-dist && tsc --project tsconfig.ingest.json && node .ingest-dist/ingest.js",
    "export:pages": "next export -o out",
    "release:pages": "npm run build:pages && npm run ingest && npm run export:pages && npm run deploy:pages && git add -A docs && git commit -m \"Deploy: $(date -u +'%Y-%m-%d %H:%M:%SZ')\" || true && git push origin main"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
